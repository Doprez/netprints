<Window x:Class="NetPrintsEditor.MainEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetPrintsEditor"
        mc:Ignorable="d"
        Background="#FF404040"
        Height="300" Width="300"
        Title="MainEditorWindow"
        x:Name="mainEditorWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="New Class" Click="NewClassButtonClicked" FontSize="18" FontWeight="Bold" />

        <ItemsControl Grid.Row="2" x:Name="classList" ItemsSource="{Binding ElementName=mainEditorWindow, Path=Classes}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding Name}" Click="OnClassButtonClicked" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>
