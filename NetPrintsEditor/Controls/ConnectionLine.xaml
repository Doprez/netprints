<UserControl x:Class="NetPrintsEditor.Controls.ConnectionLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetPrintsEditor.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" x:Name="connectionWindow">
    <Grid>
        <Line X1="{Binding ElementName=connectionWindow, Path=PinControlA.AnchorPoint.X}" 
              Y1="{Binding ElementName=connectionWindow, Path=PinControlA.AnchorPoint.Y}" 
              X2="{Binding ElementName=connectionWindow, Path=PinControlB.AnchorPoint.X}" 
              Y2="{Binding ElementName=connectionWindow, Path=PinControlB.AnchorPoint.Y}" StrokeThickness="5" Stroke="Red" />
    </Grid>
</UserControl>
