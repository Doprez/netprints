<UserControl x:Class="NetPrintsEditor.Controls.PinControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetPrintsEditor.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="10" d:DesignWidth="30" x:Name="pinWindow">
    <Canvas x:Name="canvas" MouseLeftButtonDown="Canvas_MouseLeftButtonDown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Ellipse x:Name="ellipse" Width="10" Height="10" Fill="#FF6464C5" Stroke="Black" MouseMove="OnEllipseMouseMove" DragOver="OnEllipseDragOver" Drop="OnEllipseDrop" AllowDrop="True" />
            <Label x:Name="label" Content="{Binding ElementName=pinWindow, Path=Pin.Name}" FontFamily="Lucida Sans Unicode" FontSize="8" FontWeight="Bold" Grid.Column="1" VerticalContentAlignment="Center" />
        </Grid>
        
        <Path x:Name="cable" Stroke="Black" StrokeThickness="2" IsHitTestVisible="False">
            <Path.Data>
                <PathGeometry>
                    <PathGeometry.Figures>
                        <PathFigureCollection>
                            <PathFigure StartPoint="{Binding ElementName=pinWindow, Path=StartPoint}">
                                <PathFigure.Segments>
                                    <PathSegmentCollection>
                                        <BezierSegment 
                                            Point1="{Binding ElementName=pinWindow, Path=ControlPoint1}" 
                                            Point2="{Binding ElementName=pinWindow, Path=ControlPoint2}" 
                                            Point3="{Binding ElementName=pinWindow, Path=AnchorPoint}" />
                                    </PathSegmentCollection>
                                </PathFigure.Segments>
                            </PathFigure>
                        </PathFigureCollection>
                    </PathGeometry.Figures>
                </PathGeometry>
            </Path.Data>
        </Path>
    </Canvas>
</UserControl>
