<UserControl x:Class="NetPrintsEditor.Controls.VariableEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetPrintsEditor.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" x:Name="wnd">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Name" />
        <TextBox Grid.Column="1" x:Name="variableName" Text="{Binding ElementName=wnd, Path=Variable.Name, Mode=TwoWay}" />

        <Label Grid.Row="1" Content="Type" />
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="variableType" Text="{Binding ElementName=wnd, Path=Variable.VariableType.FullName, Mode=OneWay}" IsReadOnly="True" />
    </Grid>
</UserControl>
